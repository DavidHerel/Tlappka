<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_profile">

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_icon_example"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nameTextView"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Eliška Mášková"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/profileIcon" />


    <ImageView
        android:id="@+id/addPhotoIcon"
        android:layout_width="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_photo_icon"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/profileIcon" />

    <ImageView
        android:id="@+id/addPetIcon"
        android:layout_width="40dp"
        android:src="@drawable/add_pet_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/addPhotoIcon" />


    <ImageView
        android:id="@+id/photosIcon"
        android:layout_width="40dp"
        android:src="@drawable/photo_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/addPetIcon" />

    <ImageView
        android:id="@+id/petOne"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/pet_one"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toEndOf="@id/profileIcon"
    app:layout_constraintTop_toBottomOf="@id/addPhotoIcon"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pet_two"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/petOne"
        app:layout_constraintTop_toBottomOf="@id/addPhotoIcon"/>


    <LinearLayout
        android:background="@drawable/layout_bg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/profileInfo"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profileIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/profile_place_icon"
                android:layout_marginStart="10dp"
            />
            <com.google.android.material.textview.MaterialTextView
                android:textColor="#000000"
                android:id="@+id/profilePlace"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praha"/>
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/profile_date_icon"
                android:layout_marginStart="10dp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/profileAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 let"/>
            />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/profile_job_icon"
                android:layout_marginStart="10dp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/profileJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="editorka časopisu Svět zvířat"/>
            />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/profile_hobbies_icon"
                android:layout_marginStart="10dp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:textColor="#000000"
                android:id="@+id/profileHobbies"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="procházky s pejsky, běh, turistika, cestování"/>
            />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:id="@+id/profileDescription"
            android:text="Jsem hrdou majitelkou tří krásných pejsků a malého miláčka
křečka. Kdykoli to jde, vyrážíme na outdoor dobrodružství do
přírody, na cvičák nebo jen tak do parku. Rádi potkáme
podobně naladěné fajn lidské i psí kamarády."/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerViewProfile"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/profileInfo"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>