<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="basic_fragment_layout">
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="about_title_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/toolbar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_vertical_padding</item>
    </style>

    <style name="home_datetime_style">
        <item name="android:textColor">@color/colorTextLightGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="home_text_style">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="home_username_style">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="home_description_style">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular_italic</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="home_comment_style">
        <item name="android:textColor">@color/colorTextDarkGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>
